#--------------------------------------------------------------------
# Example Environment Configuration file
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------
CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------
app.baseURL = 'http://localhost:8080/'

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------
# ⚠️ Cada integrante debe cambiar estos valores por su propia base local
#    o por las credenciales de Railway si trabajarán todos sobre la misma.
database.default.hostname = localhost
database.default.database = plataforma_educativa
database.default.username = root
database.default.password = 
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------
encryption.key = hex2bin:your-random-32-bytes-key-here

#--------------------------------------------------------------------
# EMAIL (PHPMailer via Gmail - ejemplo)
#--------------------------------------------------------------------
# ⚠️ No subas nunca las credenciales reales al repo
email.protocol = smtp
email.SMTPHost = smtp.gmail.com
email.SMTPUser = tu_correo@gmail.com
email.SMTPPass = tu_password_app
email.SMTPPort = 587
email.mailType = html
email.charset  = UTF-8
